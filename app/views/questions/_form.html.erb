<%= form_for :question, url: questions_path do |f| %>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :body %><br>
		<%= f.text_area :body %> 
	</p>
	<p>
		<%= f.label :status %><br>
		<%= f.text_area :status %>
	</p>
	<p>
		<%= f.label :tag_list, "Tags (separated by commas)" %><br>
		<%= f.text_field :tag_list %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>